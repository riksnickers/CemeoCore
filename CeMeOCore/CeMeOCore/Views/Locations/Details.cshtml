@model CeMeOCore.DAL.Models.Location

@{
    Layout = "~/Views/Shared/AdminHeader.cshtml";
}


<div>
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.LocationID)
