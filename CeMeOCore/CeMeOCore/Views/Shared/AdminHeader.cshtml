@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Admin Panel</title>
    @Styles.Render("~/Content/admincss")
    @Scripts.Render("~/bundles/adminjs")
</head>
<body>
    <div id="wrapper">

        <!-- Sidebar -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                Adminpanel
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    <li>@Html.ActionLink("Dashboard", "Index", "Statistics")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-table"></i> Tables <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Rooms", "Index", "Room")</li>
                            <li>@Html.ActionLink("Locations", "Index", "Locations")</li>
                            <li>@Html.ActionLink("Users", "Index", "UserProfile")</li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right navbar-user">
                    <li class="dropdown user-dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> Administrator <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Log out", "LogOff", "Home")</li>
                            <li>@Html.ActionLink("Go to homepage", "Index", "Home")</li>
                        </ul>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </nav>
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <ol class="breadcrumb">
                        <li><a href="index.html"><i class="icon-dashboard"></i> @ViewBag.page</a></li>
                        <li class="active"><i class="icon-file-alt"></i> @ViewBag.title</li>
                    </ol>
                </div>
            </div><!-- /.row -->
            @RenderBody()
        </div><!-- /#page-wrapper -->
    </div><!-- /#wrapper -->
</body>
</html>
